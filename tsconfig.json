{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "ESNext",
    "lib": ["esnext", "es2015", "es2016", "es2017", "es2019", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true, // better compat for babel and es5 modules
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
      "./src/**/*"
  ]
}
